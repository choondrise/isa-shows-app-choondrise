<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTextInputLayout_overlay">
        <item name="colorOnSurface">@android:color/white</item>
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="colorPrimary">@android:color/white</item>
    </style>

    <style name="CustomReviewInputLayout_overlay">
        <item name="colorOnSurface">#52368C</item>
        <item name="boxStrokeColor">#52368C</item>
        <item name="colorPrimary">#52368C</item>
    </style>

    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:theme">@style/BottomSheetDialog</item>
    </style>

    <style name="BottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/BottomSheetDialogOverlay</item>
    </style>

    <style name="BottomSheetDialogOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

</resources>