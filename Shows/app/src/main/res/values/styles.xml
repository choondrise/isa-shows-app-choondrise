<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTextInputLayout_overlay">
        <item name="colorOnSurface">@android:color/white</item>
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="colorPrimary">@android:color/white</item>
    </style>

    <style name="CustomReviewInputLayout_overlay">
        <item name="colorOnSurface">#52368C</item>
        <item name="boxStrokeColor">#52368C</item>
        <item name="colorPrimary">#52368C</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">#52368C</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedDialog</item>
    </style>

    <style name="RoundedDialog"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

</resources>